{% extends 'base.html.twig' %}

{% block title %}Plat - Index{% endblock %}

{% block body %}

<div>
    <h1><a href="{{ path('index') }}"><img src="{{ asset('img/logo-kafeti.png') }}" alt="Logo Kafeti"></a>Plats</h1>
    
          	<table class="table table-sm table-striped">
        	<tr>
        		<th>#</th>
        		<th>Dénomination</th>
        		<th>Description</th>
        		<th>Type de plat</th>
        		<th>Catégorie de plat</th>
        	</tr>
        	
                {% for plat in plats %}
            <tr>
        		<td>{{ plat.actif |actif(true) |raw}}{{ plat.id }}</td>
        		<td>{{ plat.denomination }}</td>
        		<td>{{ plat.description }}</td>
        		<td>{{ plat.type | type }}</td>
        		<td>{{ plat.categoriePlat.denomination }}</td>
                {% endfor %}
            </tr>
</div>
{% endblock %}
